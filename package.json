{
  "name": "rainbow-dot-contracts",
  "version": "0.1.0",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-bignumber": "^2.0.2",
    "dotenv": "4.0.0",
    "ganache-cli": "^6.1.6",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "rlp": "^2.2.2",
    "solium": "^1.2.2",
    "truffle": "^5.0.3",
    "truffle-hdwallet-provider": "^0.0.5"
  },
  "dependencies": {
    "ethereum-datetime": "^1.0.0",
    "openzeppelin-solidity": "2.0.0",
    "truffle-plugin-modularizer": "^1.0.1"
  },
  "scripts": {
    "standard": "./node_modules/.bin/standard test/** src/** --fix",
    "ethlint": "./node_modules/.bin/solium -d contracts",
    "modularize": "./node_modules/.bin/truffle run modularize",
    "precommit": "lint-staged && npm run test && npm run modularize && git add src/index.js",
    "test": "scripts/test.sh"
  },
  "standard": {
    "globals": [
      "contract",
      "artifacts",
      "web3",
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "should",
      "expect",
      "assert"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run standard",
      "git add"
    ],
    "*.sol": [
      "npm run ethlint",
      "git add"
    ]
  }
}
